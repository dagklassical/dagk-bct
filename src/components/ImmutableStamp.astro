---
// src/components/ImmutableStamp.astro
// Propiedades esperadas: uuid, timestamp, operator
const { uuid, timestamp, operator } = Astro.props;
---

<div 
  class="mt-8 p-4 border-t border-platinum bg-white/50 backdrop-blur-sm rounded-lg max-w-2xl mx-auto"
>
  <p class="text-xs text-slate-600 font-['Source_Code_Pro'] leading-relaxed">
    <span class="font-medium">UUID:</span> {uuid}<br>
    <span class="font-medium">Timestamp:</span> {timestamp}<br>
    <span class="font-medium">Operador:</span> {operator}
  </p>
</div>