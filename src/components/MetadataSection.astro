---
// src/components/MetadataSection.astro
// Generar metadatos inmutables
const generateUUID = () => {
  return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
    const r = Math.random() * 16 | 0;
    const v = c === 'x' ? r : (r & 0x3 | 0x8);
    return v.toString(16);
  });
};

const metadata = {
  uuid: generateUUID(),
  timestamp: new Date().toISOString(),
  operator: 'adrian.prado@elsistema.web',
};
---

<div class="mt-8 p-4 border-t border-platinum pt-4 text-sm text-slate-600">
  <p><strong>UUID:</strong> <span id="metadata-uuid">{metadata.uuid}</span></p>
  <p><strong>Fecha:</strong> <span id="metadata-timestamp">{metadata.timestamp}</span></p>
  <p><strong>Operador:</strong> {metadata.operator}</p>
</div>

