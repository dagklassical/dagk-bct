---
// src/components/Header.astro
const navItems = [
  { 
    label: 'Música', 
    //href: '/musica/',
    isMenu: true,
    children: [
      { label: 'Música', href: '/musica/'},  
      { label: 'Discografía', href: '/musica/discografia/' },
      { label: 'Artistas', href: '/musica/artistas/' }
    ]
  },
  { 
    label: 'Blockchain', 
    isMenu: true,
    children: [
      { label: 'Blockchain', href: '/blockchain/' },  
      { label: 'Music Cards', href: '/blockchain/music-cards/' },
      { label: 'Tecnología', href: '/blockchain/tecnologia/' },
      { label: 'Tickets', href: '/blockchain/tickets/' }
    ]
  },
  { label: 'Inversión', href: '/inversion/' },
  { 
    label: 'Nosotros', 
    isMenu: true,
    children: [
      { label: 'Nosotros', href: '/nosotros/' },  
      { label: 'Dag Klassical', href: '/nosotros/dag-klassical/' },
      { label: 'Danilo Álvarez', href: '/nosotros/danilo-alvarez/' },
      { label: 'Términos', href: '/nosotros/terminos/' }
    ]
  },
  { label: 'Noticias', href: '/noticias/' },
  { label: 'Contacto', href: '/contacto/' },
];
---

<header class="sticky top-0 z-50 bg-platinum/80 shadow-md">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo (siempre a la izquierda) -->
    <a href="/" aria-label="Ir a la página principal" class="flex items-center">
      <img src="/logo-dagklassical-orig-001.svg" alt="Dag Klassical" class="h-16" />
    </a>

    <!-- Contenedor central: menú + lupa (solo en desktop) -->
    <div class="hidden md:flex items-center gap-6">
      <!-- Menú de navegación -->
      <nav class="flex space-x-6">
        {navItems.map(item => (
          item.children ? (
            <div class="group relative">
    <!-- SIN font-semibold aquí -->
    <button class="flex items-center gap-1 text-slate-700 font-medium hover:text-dag-burgundy transition-colors">
      {item.label}
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
    <div class="absolute left-0 mt-0 w-48 bg-gray95 rounded-lg shadow-lg border border-platinum opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-opacity duration-200 z-50">
      <div class="py-1">
        {item.children.map(child => (
          <a
            href={child.href}
            class={`block px-4 py-2 text-sm ${
              child.label === item.label 
                ? 'font-semibold text-dag-burgundy' 
                : 'text-slate-700 hover:text-dag-burgundy'
            }`}
          >
            {child.label}
          </a>
        ))}
      </div>
    </div>
  </div>
) : (
  <a
    href={item.href}
    class="text-slate-700 font-medium hover:text-dag-burgundy transition-colors"
  >
    {item.label}
  </a>
)
        ))}
      </nav>

      <!-- Lupa (siempre a la derecha del menú, en desktop) -->
      <button aria-label="Buscar" class="p-2 text-slate-600 hover:text-dag-burgundy">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  </button>
    </div>

    <!-- Hamburguesa (solo en móvil) -->
    <button id="mobile-menu-toggle" class="md:hidden p-2 rounded-md text-slate-700 hover:text-dag-burgundy">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menú móvil -->
  <nav id="mobile-menu" class="hidden md:hidden container mx-auto px-4 pb-4 space-y-2">
    {navItems.map(item => (
      <div key={item.href}>
        {item.children ? (
          <details class="group">
    <summary class="list-none cursor-pointer py-2 px-4 rounded-lg bg-white border border-platinum text-slate-700 font-medium hover:bg-gray95 flex justify-between items-center">
  {item.label}
  <svg class="h-4 w-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    {/* ... */}
  </svg>
</summary>
    <div class="ml-4 mt-1 space-y-1">
      {item.children.map(child => (
  <a
    key={child.href}
    href={child.href}
    class={`block py-1 px-2 text-sm ${
      child.label === item.label 
        ? 'font-semibold text-dag-burgundy' 
        : 'text-slate-600 hover:text-dag-burgundy'
    }`}
  >
    • {child.label}
  </a>
))}
    </div>
  </details>
) : (
  <a
    href={item.href}
    class="block py-2 px-4 rounded-lg bg-white border border-platinum text-slate-700 hover:text-dag-burgundy font-medium"
  >
    {item.label}
  </a>
)}
      </div>
    ))}
  </nav>
</header>

<script>
  (function() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    if (!toggle || !menu) return;

    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });

    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => menu.classList.add('hidden'));
    });

    document.addEventListener('click', (e) => {
      if (!toggle.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.add('hidden');
      }
    });
  })();
</script>