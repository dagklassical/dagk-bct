---
// ScrollToTop.astro
// Botón flotante que aparece tras scrollear 400px
---

<div 
  id="scroll-to-top" 
  class="fixed bottom-6 right-6 bg-dag-black/60 text-white p-3 rounded-full shadow-lg opacity-0 pointer-events-none transition-opacity duration-300 z-40 hover:bg-dag-black/90"
  aria-label="Volver arriba"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
  </svg>
</div>

<script>
  // Script liviano, sin dependencias
  (function() {
    const button = document.getElementById('scroll-to-top');
    if (!button) return;

    const toggleVisibility = () => {
      if (window.scrollY > 400) {
        button.classList.remove('opacity-0', 'pointer-events-none');
      } else {
        button.classList.add('opacity-0', 'pointer-events-none');
      }
    };

    const scrollToTop = () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    };

    window.addEventListener('scroll', toggleVisibility);
    button.addEventListener('click', scrollToTop);

    // Limpieza no necesaria en páginas estáticas, pero buena práctica
    // window.removeEventListener no se aplica aquí por ser SPA-like en navegación
  })();
</script>