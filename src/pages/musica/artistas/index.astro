---
// src/pages/musica/artistas/index.astro
import Layout from '../../../layouts/Layout.astro';
import artists from '../../../data/artists.json';

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Música', href: '/musica/' },
  { label: 'Artistas', href: '/musica/artistas/' },
];
---

<Layout title="Artistas" description="Músicos y creadores en DAG Klassical" breadcrumbs={breadcrumbs}>

  <header class="bg-white text-center mb-6 py-8 px-3">
    <h1 class="text-h1 font-advent">Artistas</h1>
    <p class="text-dag-burgundy mt-2">Cada obra en DAG Klassical nace de la visión de creadores excepcionales. Conoce a quienes dan vida a nuestra música.</p>
  </header>

  <!-- Filtros (opcional por ahora, pero con espacio) -->
  <!--
  <div class="flex justify-center gap-4 mb-8 text-sm">
    <button class="px-3 py-1 border border-platinum rounded">Todos</button>
    <button class="px-3 py-1 text-slate-500">Clásica</button>
    <button class="px-3 py-1 text-slate-500">Espiritual</button>
    <button class="px-3 py-1 text-slate-500">Navideña</button>
  </div>
  -->

  <!-- Grid de artistas -->
  <div class="max-w-6xl mx-auto px-6 pt-2 pb-6">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 py-6">
      {artists.map(artist => (
        <a 
          href={`/musica/artistas/${artist.id}`} 
          class="block group text-center"
          key={artist.id}
        >
          <div class="aspect-[4/5] bg-slate-100 rounded-lg overflow-hidden border border-slate-200 group-hover:border-dag-burgundy/40 transition-colors">
            {artist.avatar ? (
              <img 
                src={artist.avatar} 
                alt={artist.name}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-slate-50 text-slate-400">
                <span class="text-xs">Sin imagen</span>
              </div>
            )}
          </div>
          <h3 class="leading-none mt-3 text-h3 font-advent text-slate-800 group-hover:text-dag-burgundy transition-colors">
            {artist.name}
          </h3>
        </a>
      ))}
    </div>
  </div>

  <!-- Botón "Ver todos" (opcional si hay paginación futura) -->
  <!-- Por ahora no es necesario si muestras todos -->
</Layout>