---
// src/pages/musica/artistas/[id].astro
import Layout from '../../../layouts/Layout.astro';
import ImmutableStamp from '../../../components/ImmutableStamp.astro';
import artists from '../../../data/artists.json';
import releases from '../../../data/releases.json';

// ✅ Requerido para rutas dinámicas en Astro
export async function getStaticPaths() {
  return artists.map(artist => ({
    params: { id: artist.id },
    props: { artist }
  }));
}

const { id } = Astro.params;
const artist = Astro.props.artist;

if (!artist) {
  return Astro.redirect('/musica/artistas');
}

// Filtrar releases asociadas a este artista
const artistReleases = releases.filter(r => 
  Array.isArray(artist.releases) && artist.releases.includes(r.id)
);

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Música', href: '/musica/' },
  { label: 'Artistas', href: '/musica/artistas/' },
  { label: artist.name, href: `/musica/artistas/${id}` },
];
---

<Layout title={artist.name} description={artist.bio || `Perfil de ${artist.name}`} breadcrumbs={breadcrumbs}>
  {/* Enlace de retorno */}
  <div class="max-w-4xl mx-auto pt-8 px-4">
    <a href="/musica/artistas" class="text-slate-700 hover:text-dag-burgundy flex items-center text-sm">
      ← Volver a Artistas
    </a>
  </div>

  <article class="max-w-4xl mx-auto px-4 pt-6 pb-10">
    <div class="flex flex-col md:flex-row gap-6">
      <div class="md:w-1/3 text-center">
        <img
          src={artist.avatar}
          alt={artist.name}
          class="w-64 h-82 rounded-md mx-auto shadow-md object-cover mt-4"
          onerror="this.src='https://placehold.co/200x200/cccccc/999999?text=Avatar'"
        />
      </div>
      <div class="md:w-2/3">
        <h1 class="text-h1 font-advent mb-2">{artist.name}</h1>
        <p class="text-xl text-slate-600 mb-4">{artist.role}</p>
        {artist.bio && (
          <p class="mb-6 text-slate-700">{artist.bio}</p>
        )}

        {artist.website && (
          <p class="mb-2">
            <strong>Sitio web:</strong> <a href={artist.website} target="_blank" class="text-platinum hover:underline">{artist.website}</a>
          </p>
        )}

        {artist.social && (
          <div class="mb-6">
            <strong>Redes sociales:</strong>
            <ul class="mt-1 space-y-1">
              {Object.entries(artist.social).map(([platform, handle]) => (
                <li key={platform}>
                  <span class="capitalize">{platform}:</span> {handle}
                </li>
              ))}
            </ul>
          </div>
        )}

        <section>
          <h2 class="text-xl font-semibold mb-3">Obras asociadas</h2>
          {artistReleases.length > 0 ? (
            <div class="space-y-2">
              {artistReleases.map(release => (
                <a
                  key={release.id}
                  href={`/musica/colecciones/${release.id}`}
                  class="block bg-white p-3 rounded border border-platinum hover:bg-gray95 transition-colors"
                >
                  {release.title} ({release.type})
                </a>
              ))}
            </div>
          ) : (
            <p>No hay obras asociadas a este artista aún.</p>
          )}
        </section>
      </div>
    </div>

    <!-- Metadatos inmutables -->
  </article>
</Layout>