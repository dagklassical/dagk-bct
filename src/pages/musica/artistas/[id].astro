---
// src/pages/musica/artistas/[id].astro
import Layout from '../../../layouts/Layout.astro';
import artists from '../../../data/artists.json';
import releases from '../../../data/releases.json';

// Genera una página estática para cada artista
export async function getStaticPaths() {
  return artists.map(artist => ({
    params: { id: artist.id },
    props: { artist }
  }));
}

const { id } = Astro.params;
const artist = Astro.props.artist;

if (!artist) {
  return Astro.redirect('/musica/discografia');
}

// Busca las obras asociadas al artista
const artistReleases = releases.filter(release =>
  release.artistIds.includes(artist.id)
);

const pageTitle = `${artist.name} - Artistas`;
const pageDescription = artist.bio || `Perfil de ${artist.name}, ${artist.role}.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <article class="max-w-4xl mx-auto p-4">
    <div class="flex flex-col md:flex-row gap-6">
      <div class="md:w-1/3 text-center">
        <img
          src={artist.avatar}
          alt={artist.name}
          class="w-48 h-48 rounded-full mx-auto shadow-md object-cover"
          onerror="this.src='https://placehold.co/200x200/cccccc/999999?text=Avatar'"
        />
      </div>
      <div class="md:w-2/3">
        <h1 class="text-3xl font-bold mb-2">{artist.name}</h1>
        <p class="text-xl text-slate-600 mb-4">{artist.role}</p>
        {artist.bio && (
          <p class="mb-6 text-slate-700">{artist.bio}</p>
        )}

        {artist.website && (
          <p class="mb-2">
            <strong>Sitio web:</strong> <a href={artist.website} target="_blank" class="text-platinum hover:underline">{artist.website}</a>
          </p>
        )}

        {artist.social && (
          <div class="mb-6">
            <strong>Redes sociales:</strong>
            <ul class="mt-1 space-y-1">
              {Object.entries(artist.social).map(([platform, handle]) => (
                <li key={platform}>
                  <span class="capitalize">{platform}:</span> {handle}
                </li>
              ))}
            </ul>
          </div>
        )}

        <section>
          <h2 class="text-xl font-semibold mb-3">Obras asociadas</h2>
          {artistReleases.length > 0 ? (
            <div class="space-y-2">
              {artistReleases.map(release => (
                <a
                  key={release.id}
                  href={`/musica/colecciones/${release.id}`}
                  class="block bg-white p-3 rounded border border-platinum hover:bg-gray95 transition-colors"
                >
                  {release.title} ({release.type})
                </a>
              ))}
            </div>
          ) : (
            <p>No hay obras asociadas a este artista aún.</p>
          )}
        </section>
      </div>
    </div>

    <!-- Metadatos inmutables -->
    <div class="mt-8 p-4 border-t border-platinum text-sm text-slate-600">
      <h3 class="font-semibold mb-2">Metadatos Inmutables</h3>
      <p><strong>UUID:</strong> {artist.metadata.uuid}</p>
      <p><strong>Timestamp:</strong> {artist.metadata.timestamp}</p>
      <p><strong>Operador:</strong> {artist.metadata.operator}</p>
    </div>
  </article>
</Layout>