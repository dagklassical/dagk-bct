---
// src/pages/musica/index.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import musicCards from '../../data/music-cards.json';
import artists from '../../data/artists.json';

const allNoticias = await getCollection('noticias');

// --- Preparamos los datos ---

// 1. Artistas (mostramos todos en una lista compacta)
const allArtists = artists;

// 2. Últimos lanzamientos (ahora 5, más pequeños)
const latestReleases = musicCards.slice(0, 5);

// 3. Últimas noticias (seguimos con 3)
const latestNews = allNoticias.slice(0, 3);

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Música', href: '/musica/' },
];
---

<Layout title="Música | DAG Klassical" description="El corazón de DAG Klassical. Explora nuestros lanzamientos, artistas y las últimas novedades de nuestro ecosistema." breadcrumbs={breadcrumbs}>
  <main class="bg-gray95">
    <div class="max-w-6xl mx-auto px-4 py-12 space-y-20">

      <!-- ===================================
           1. SECCIÓN HERO
           =================================== -->
      <section class="text-center">
        <h1 class="text-4xl md:text-6xl font-advent font-bold text-slate-900 mb-4">
          El Corazón de la Música Clásica Digital
        </h1>
        <p class="text-xl md:text-2xl text-slate-600 max-w-4xl mx-auto">
          Explora nuestros lanzamientos de alta fidelidad, conoce a los talentosos artistas detrás de cada nota y descubre las últimas novedades de nuestro ecosistema.
        </p>
      </section>

      <!-- ===================================
           2. SECCIÓN DE ARTISTAS (NUEVO Y COMPACTO)
           =================================== -->
      <section>
        <div class="text-center mb-10">
          <h2 class="text-3xl font-advent font-semibold text-slate-900 mb-3">Nuestros Artistas</h2>
          <p class="text-lg text-slate-600">Los talentosos intérpretes que dan vida a nuestra visión.</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
          {allArtists.map((artist) => (
            <a href={`/musica/artistas/${artist.id}`} class="group text-center">
              <img src={artist.image || 'https://placehold.co/200x200/e5e5e5/0f172a?text=Artista'} alt={artist.name} class="w-full h-24 md:h-32 object-cover rounded-lg shadow-md group-hover:shadow-xl transition-all duration-300" />
              <h3 class="text-sm font-semibold text-slate-800 mt-2 group-hover:text-dag-burgundy transition-colors">{artist.name}</h3>
            </a>
          ))}
        </div>
      </section>

      <!-- ===================================
           3. SECCIÓN DE ÚLTIMOS LANZAMIENTOS (MÁS PEQUEÑOS)
          =================================== -->
      <section>
        <div class="text-center mb-10">
          <h2 class="text-3xl font-advent font-semibold text-slate-900 mb-3">Últimos Lanzamientos</h2>
          <p class="text-lg text-slate-600">Descubre las nuevas Music Cards y obras maestras disponibles ahora.</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
          {latestReleases.map((card) => (
            <a href={`/blockchain/music-cards/${card.id}`} class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden">
              <img src={card.cardImage} alt={card.title} class="w-full h-40 object-cover" />
              <div class="p-4">
                <h3 class="text-sm font-bold font-advent text-slate-900 mb-1 group-hover:text-dag-burgundy transition-colors truncate">{card.title}</h3>
                <p class="text-xs text-slate-500 truncate">{card.artist || 'Artista'}</p>
              </div>
            </a>
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/blockchain/music-cards/" class="btn-primary text-lg px-8 py-3">
            Ver Todas las Music Cards
          </a>
        </div>
      </section>

      <!-- ===================================
           4. SECCIÓN DE ÚLTIMAS NOTICIAS
          =================================== -->
      <section>
        <div class="text-center mb-10">
          <h2 class="text-3xl font-advent font-semibold text-slate-900 mb-3">Últimas Noticias</h2>
          <p class="text-lg text-slate-600">Mantente al día con el pulso de la revolución musical.</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {latestNews.map((post) => (
            <article class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden">
              <a href={`/noticias/${post.slug}/`} class="block">
                <img src={post.data.image || '/placeholder-image.jpg'} alt={post.data.title} class="w-full h-48 object-cover" />
                <div class="p-5">
                  <span class="inline-block px-3 py-1 text-xs font-semibold text-dag-burgundy bg-dag-burgundy/10 rounded-full mb-3">
                    {(post.data.tags && post.data.tags.length > 0) ? post.data.tags[0] : 'General'}
                  </span>
                  <h3 class="text-xl font-bold font-advent text-slate-900 mb-2">{post.data.title}</h3>
                  <p class="text-sm text-slate-500">
                    {new Date(post.data.date).toLocaleDateString('es-VE', { day: 'numeric', month: 'long', year: 'numeric' })}
                  </p>
                </div>
              </a>
            </article>
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/noticias/" class="btn-secondary text-lg px-8 py-3">
            Ver Todas las Noticias
          </a>
        </div>
      </section>

    </div>
  </main>
</Layout>