---
// src/pages/contacto/index.astro
import Layout from '../../layouts/Layout.astro';

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Contacto', href: '/contacto/'},
];
const pageTitle = 'Contacto - Dag Klassical BCT';
const pageDescription = 'Canaliza tu consulta al área correcta: artistas, prensa, comercial o soporte técnico.';
---

<Layout title={pageTitle} description={pageDescription} breadcrumbs={breadcrumbs}>
  <section class="py-16 bg-gray95">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-h1 font-advent font-bold mb-6">Contacto</h1>
      <p class="text-lg text-slate-700 mb-12">
        Estamos aquí para conectar contigo. Selecciona el área que corresponda a tu consulta.
      </p>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Artistas -->
        <a href="/contacto/artistas" class="bg-white p-6 rounded-lg shadow-md border border-platinum hover:bg-gray95 transition-colors">
          <h2 class="text-h2 font-advent mb-2">Artistas</h2>
          <p>¿Eres compositor, intérprete o productor? Únete a nuestra plataforma.</p>
        </a>

        <!-- Prensa -->
        <a href="/contacto/prensa" class="bg-white p-6 rounded-lg shadow-md border border-platinum hover:bg-gray95 transition-colors">
          <h2 class="text-h2 font-advent mb-2">Prensa</h2>
          <p>Entrevistas, reseñas, cobertura de lanzamientos y eventos.</p>
        </a>

        <!-- Comercial -->
        <a href="/contacto/comercial" class="bg-white p-6 rounded-lg shadow-md border border-platinum hover:bg-gray95 transition-colors">
          <h2 class="text-h2 font-advent mb-2">Comercial</h2>
          <p>Oportunidades de inversión, patrocinio y colaboración empresarial.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Pie de contacto genérico (opcional) -->
  <section class="py-8 text-center">
    <p class="text-slate-600">¿No sabes a qué área escribir? Usa nuestro <a href="mailto:cto@dagklassical.com" class="text-dag-burgundy hover:underline">correo general</a>.</p>
  </section>
</Layout>