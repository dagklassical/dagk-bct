---
// src/pages/blockchain/music-cards/[id].astro
import Layout from '../../../layouts/Layout.astro';
import ImmutableStamp from '../../../components/ImmutableStamp.astro';
import musicCards from '../../../data/music-cards.json';
import releases from '../../../data/releases.json';
import artists from '../../../data/artists.json';

export async function getStaticPaths() {
  return musicCards
    .filter(card => card.status === 'available')
    .map(card => ({
      params: { id: card.id },
      props: { card }
    }));
}

const { id } = Astro.params;
const card = Astro.props.card;

if (!card) {
  return Astro.redirect('/blockchain/music-cards');
}

// Función auxiliar para buscar enlaces
const getSocialLink = (platformName) => {
  return card.socialLinks?.find(link => link.platform === platformName)?.url;
};

// Extraemos las URLs (asegúrate de que los nombres coinciden con el JSON)
const spotifyUrl = getSocialLink('Spotify');
const appleMusicUrl = getSocialLink('Apple Music');
const youtubeMusicUrl = getSocialLink('YouTube Music');
const tidalUrl = getSocialLink('Tidal');   // <--- Nuevo
const deezerUrl = getSocialLink('Deezer'); // <--- Nuevo

const release = releases.find(r => r.id === card.associatedRelease);
const artist = release?.artistIds?.[0] ? artists.find(a => a.id === release.artistIds[0]) : null;
const artistName = artist?.name || 'Artista no identificado';

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Blockchain', href: '/blockchain/' },
  { label: 'Music Cards', href: '/blockchain/music-cards/' },
  { label: card.title, href: `/blockchain/music-cards/${id}` },
];
---

<Layout title={card.title} description={release?.description || 'Music Card verificable en blockchain'} breadcrumbs={breadcrumbs}>

  {/* Enlace de retorno */}
  <div class="max-w-4xl mx-auto pt-8 px-4">
    <a href="/blockchain/music-cards" class="text-slate-700 hover:text-dag-burgundy flex items-center text-sm">
      ← Volver a Music Cards
    </a>
  </div>

  <article class="max-w-4xl mx-auto px-4 pt-4 pb-10">
    <div class="flex flex-col md:flex-row gap-6">
      {/* === COLUMNA IZQUIERDA: IMAGEN + ÍCONOS + PLAYER + TRACKLIST === */}
      <div class="md:w-1/3 space-y-6">
        {/* Imagen de la Music Card */}
        <img
          src={card.cardImage}
          alt={card.title}
          class="w-full rounded-md mx-auto shadow-md mt-4 object-contain"
          onerror="this.src='https://placehold.co/300x480/cccccc/999999?text=Music+Card'"
        />

        {/* Íconos de plataformas */}
        <div class="flex justify-center gap-4">
          
          {/* Spotify */}
          {spotifyUrl && (
            <a
              href={spotifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Escuchar en Spotify"
              class="block w-7 h-7 hover:scale-110 transition-transform"
            >
              <img src="/icons/spotify-color-icon.svg" alt="Spotify" class="w-full h-full" />
            </a>
          )}

          {/* Apple Music */}
          {appleMusicUrl && (
            <a
              href={appleMusicUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Escuchar en Apple Music"
              class="block w-7 h-7 hover:scale-110 transition-transform"
            >
              <img src="/icons/apple-music-color-icon.svg" alt="Apple Music" class="w-full h-full" />
            </a>
          )}

          {/* YouTube Music */}
          {youtubeMusicUrl && (
            <a
              href={youtubeMusicUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Escuchar en YouTube Music"
              class="block w-7 h-7 hover:scale-110 transition-transform"
            >
              <img src="/icons/youtube-music-color-icon.svg" alt="YouTube Music" class="w-full h-full" />
            </a>
          )}

          {/* Tidal (Nuevo) */}
          {tidalUrl && (
            <a
              href={tidalUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Escuchar en Tidal"
              class="block w-7 h-7 hover:scale-110 transition-transform"
            >
              {/* Asegúrate de tener este icono en tu carpeta public/icons */}
              <img src="/icons/tidal-color-icon.svg" alt="Tidal" class="w-full h-full" />
            </a>
          )}

          {/* Deezer (Nuevo) */}
          {deezerUrl && (
            <a
              href={deezerUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Escuchar en Deezer"
              class="block w-7 h-7 hover:scale-110 transition-transform"
            >
              {/* Asegúrate de tener este icono en tu carpeta public/icons */}
              <img src="/icons/deezer-color-icon.svg" alt="Deezer" class="w-full h-full" />
            </a>
          )}

        </div>

        {/* Reproductor */}
        <div class="bg-white border border-platinum rounded-xl px-4 py-3">
          <audio id="music-player" controls class="w-full h-16 mb-3"></audio>
        </div>

        {/* Tracklist con scroll */}
        {release?.tracks && (
          <section class="bg-white p-5 rounded-lg border border-platinum max-h-[300px] overflow-y-auto">
            <h3 class="text-lg font-semibold mb-3">Tracklist</h3>
            <ol class="space-y-2">
              {release.tracks.map((track, i) => {
                const demoSrc = typeof track.demo === 'string' ? track.demo : '/protected/demo/corre-caballito-demo.mp3';
                return (
                  <li 
                    key={i}
                    data-demo={demoSrc}
                    class={`flex justify-between items-center px-2 py-2 text-xs border-b border-slate-100 last:border-0 cursor-pointer hover:bg-slate-50 ${
              i % 2 === 0 ? 'bg-gray95/40' : 'bg-gray95'
            }`} 
                    onclick={`playTrack('${track.demo || '/protected/demo/corre-caballito-demo.mp3'}')`}
                  >
                    <span class="font-medium">{i + 1}. {track.title}</span>
                    <span class="text-slate-500 text-sm">{track.duration}</span>
                  </li>
                );
              })}
            </ol>
          </section>
        )}
      </div>

      {/* === COLUMNA DERECHA: NARRATIVA + BENEFICIOS + TÉCNICO + CRÉDITOS === */}
      <div class="md:w-2/3 pt-1">
        {/* Título y artista */}
        <h1 class="text-h1 font-advent mb-2">{card.title}</h1>
        <p class="text-xl text-slate-600 mb-4">por {artistName} · <span class="px-2 py-2 bg-dag-burgundy/5 text-dag-burgundy text-xs font-mono rounded-s-sm">DISPONIBLES 93 / 100</span></p>

        {/* Descripción del álbum */}
        {release?.description && (
          <p class="mb-5 text-slate-700">{release.description}</p>
        )}

        {/* === PRIVILEGIOS + BIOGRAFÍA + TÉCNICO + FOOTER === */}
        <section class="mb-12">
          <h3 class="text-h3 font-advent mb-3">Privilegios propios</h3>
          <ul class="list-disc pl-5 space-y-1 mb-2">
            {card.benefits.map((benefit, i) => (
              <li key={i} class="text-slate-700">{benefit}</li>
            ))}
          </ul>
          {/* Botón limpio, sin float */}
          <div class="pt-4">
            <a
              href="#"
              class="inline-block bg-dag-burgundy text-white px-8 py-3 rounded-lg hover:bg-opacity-90 transition-colors font-medium"
            >
              Adquiere esta Music Card
            </a>
          </div>
        </section>

        {/* Biografía del artista */}
        {artist && artist.bio && (
          <section class="mb-8 bg-gray95 p-4 rounded-md">
            <h3 class="text-h3 font-advent mb-3">Sobre {artist.name}</h3>
            <p class="mb-3 whitespace-pre-line">{artist.bio}</p>
          </section>
        )}

        {/* Información técnica */}
        <section class="mb-8 p-5 border border-platinum rounded-lg bg-white">
          <h4 class="font-semibold mb-2">Especificaciones Técnicas</h4>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 bg-black/5 text-slate-800 text-xs font-mono rounded">FLAC 24/192</span>
            <span class="px-2 py-1 bg-black/5 text-slate-800 text-xs font-mono rounded">MP3 320 kbps</span>
            <span class="px-2 py-1 bg-dag-burgundy/10 text-dag-burgundy text-xs font-mono rounded">Certificado en Polygon</span>
          </div>
          <p class="mt-3 text-sm text-slate-600">
            {card.edition} • {card.blockchain} • {card.price}
          </p>
        </section>
      </div>
    </div>

    {/* Footer de 2 columnas (proporción 2:1) */}
    <div class="max-w-4xl mx-auto px-4 mt-8 pt-2 border-t border-platinum">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
        {/* Columna izquierda: sello inmutable (1/3 del ancho) */}
        <div class="flex flex-col justify-end">
          <ImmutableStamp
            uuid={card.metadata.uuid}
            timestamp={card.metadata.timestamp}
            operator={card.metadata.operator}
          />
        </div>
        {/* Columna derecha: créditos (2/3 del ancho) */}
        <div class="md:col-span-2 pt-4 pb-3 px-5 border border-platinum rounded-md bg-white/50 flex flex-col justify-end">
          <p class="text-sm"><span class="text-dag-burgundy font-semibold">CRÉDITOS: </span>Piano y arreglos: {artistName} | Mezcla y mastering: Danilo Álvarez | Arte: Leo Gerulewicz | Diseño: Lorien Gascón Rojas</p>
          <p class="text-sm text-slate-600">Mezclado y masterizado en Mansa Studio®, Lechería, Venezuela.</p>
        </div>
      </div>
    </div>

    {/* Script de interactividad */}
    <script>
      function playTrack(src) {
        if (!src || typeof src !== 'string') return;
        const player = document.getElementById('music-player');
        if (!player) return;
        player.src = src;
        player.load();
        player.play().catch(e => console.warn('Reproducción fallida:', e));
      }

      // Conectar todos los items al cargar
      document.addEventListener('DOMContentLoaded', () => {
        const player = document.getElementById('music-player');
        if (!player) return;

        // Carga el primer demo
        const firstItem = document.querySelector('[data-demo]');
        if (firstItem) {
          const src = firstItem.getAttribute('data-demo');
          if (src) {
            player.src = src;
            player.load();
          }
        }

        // Añade listeners a todos los tracks
        document.querySelectorAll('[data-demo]').forEach(item => {
          item.addEventListener('click', () => {
            const src = item.getAttribute('data-demo');
            if (src) playTrack(src);
          });
        });
      });
    </script>
</Layout>